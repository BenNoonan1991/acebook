<% @posts.each do |post| %>
  <p><%= post.message %></p>
  <h2>Add a comment:</h2>
  <%= form_for([post, post.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<% end %>

<%= link_to new_post_path do %>
  New post
<% end %>
